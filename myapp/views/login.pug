doctype html
head
  title Flight Booking Website - Login
  style.
    /* form styles */
    form {
    max-width: 400px;
    margin: 2rem auto;
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    }
    label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
    }
    input[type="email"],
    input[type="password"] {
    display: block;
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 1rem;
    }
    button {
    background-color: #333;
    color: #fff;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
    }
    button:hover {
    background-color: #fff;
    color: #333;
    }
    /* error message styles */
    .error {
    color: red;
    font-weight: bold;
    margin-bottom: 1rem;
    }
form(action='#' method='post')
  h2 Log In
  label(for='email') Email:
  input#email(type='email' name='email' required='')
  label(for='password') Password:
  input#password(type='password' name='password' required='')
  button(type='submit') Log In
  button(type='submit') Create an Account
  .error
    // display error message here (if any)
